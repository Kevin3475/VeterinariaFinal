<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.veterinariafinal.viewController.DuenoViewController">
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15;">
            <Label text="CRUD de Dueños" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Dirección:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDireccion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Puntaje Fidelidad:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPuntaje" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#agregarDueno"/>
                <Button text="Actualizar" onAction="#actualizarDueno"/>
                <Button text="Eliminar" onAction="#eliminarDueno"/>
            </HBox>

            <TableView fx:id="tablaDuenos" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120"/>
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="180"/>
                    <TableColumn fx:id="colPuntaje" text="Puntaje Fidelidad" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
