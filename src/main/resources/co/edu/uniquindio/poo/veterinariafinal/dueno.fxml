<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.veterinariafinal.viewController.DuenoViewController"
            prefWidth="900" prefHeight="600">

    <top>
        <Label text="👥 Gestión de Dueños"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Formulario -->
            <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label text="Información del Dueño" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="300" halignment="LEFT"/>
                    </columnConstraints>

                    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Ingrese ID"/>

                    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Ingrese nombre"/>

                    <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Ingrese teléfono"/>

                    <Label text="Dirección:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtDireccion" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Ingrese dirección"/>

                    <Label text="Puntaje Fidelidad:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtPuntaje" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Ingrese puntaje"/>
                </GridPane>
            </VBox>

            <!-- Botones de acción -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="➕ Agregar" onAction="#agregarDueno"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="✏️ Actualizar" onAction="#actualizarDueno"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🗑️ Eliminar" onAction="#eliminarDueno"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🔍 Seleccionar" onAction="#seleccionarDueno"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🧹 Limpiar" onAction="#limpiarCampos"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
            </HBox>

            <!-- Tabla de dueños -->
            <VBox spacing="10">
                <Label text="Lista de Dueños Registrados" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TableView fx:id="tablaDuenos" prefHeight="300" prefWidth="800">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                        <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200"/>
                        <TableColumn fx:id="colPuntaje" text="Puntaje Fidelidad" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>
</BorderPane>