<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.veterinariafinal.viewController.GatoViewController"
            prefWidth="1000" prefHeight="700">

    <top>
        <Label text="🐱 Gestión de Gatos"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Formulario -->
            <VBox spacing="15" style="-fx-background-color: #f0f8ff; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                <Label text="Información del Gato" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="250" halignment="LEFT"/>
                        <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="250" halignment="LEFT"/>
                    </columnConstraints>

                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Nombre del gato"/>

                    <Label text="Raza:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtRaza" GridPane.rowIndex="0" GridPane.columnIndex="3" promptText="Raza del gato"/>

                    <Label text="Edad:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtEdad" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Edad en años"/>

                    <Label text="Peso (kg):" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtPesoKg" GridPane.rowIndex="1" GridPane.columnIndex="3" promptText="Peso en kg"/>

                    <Label text="ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtId" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="ID único"/>

                    <Label text="Dueño:" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="comboDueno" promptText="Seleccione un dueño"
                              prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                    <Label text="Tipo de Gato:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="comboTipoGato" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Seleccione tipo"/>

                    <Label text="Horas de Sueño:" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtHorasSueno" GridPane.rowIndex="3" GridPane.columnIndex="3" promptText="Horas diarias"/>

                    <Label text="Nivel Independencia:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtNivelIndependencia" GridPane.rowIndex="4" GridPane.columnIndex="1" promptText="Nivel de independencia"/>
                </GridPane>
            </VBox>

            <!-- Botones de acción -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="💾 Registrar" onAction="#registrarGato"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="✏️ Actualizar" onAction="#actualizarGato"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🗑️ Eliminar" onAction="#eliminarGato"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🔍 Seleccionar" onAction="#seleccionarGato"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                <Button text="🧹 Limpiar" onAction="#limpiarCampos"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
            </HBox>

            <!-- Tabla de gatos -->
            <VBox spacing="10">
                <Label text="Lista de Gatos Registrados" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TableView fx:id="tablaGatos" prefHeight="250" prefWidth="950">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100"/>
                        <TableColumn fx:id="colRaza" text="Raza" prefWidth="100"/>
                        <TableColumn fx:id="colEdad" text="Edad" prefWidth="70"/>
                        <TableColumn fx:id="colPeso" text="Peso (kg)" prefWidth="90"/>
                        <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                        <TableColumn fx:id="colDueno" text="Dueño" prefWidth="120"/>
                        <TableColumn fx:id="colTipoGato" text="Tipo" prefWidth="100"/>
                        <TableColumn fx:id="colHorasSueno" text="Horas Sueño" prefWidth="100"/>
                        <TableColumn fx:id="colNivelIndependencia" text="Independencia" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>