<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.poo.veterinariafinal.viewController.MenuViewController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 40;">

    <Text text="🐾 Sistema Veterinaria Final" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <!-- Los onAction deben llamar a métodos del MenuViewController -->
    <Button text="Gestión de Dueños" onAction="#abrirVentanaDueno" prefWidth="220"/>
    <Button text="Gestión de Perros" onAction="#abrirVentanaPerro" prefWidth="220"/>
    <Button text="Gestión de Gatos" onAction="#abrirVentanaGato" prefWidth="220"/>
    <Button text="Gestión de Aves" onAction="#abrirVentanaAve" prefWidth="220"/>
    <Button text="Gestión de Reptiles" onAction="#abrirVentanaReptil" prefWidth="220"/>

</VBox>
